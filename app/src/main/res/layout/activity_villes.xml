<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:ignore="SpeakableTextPresentCheck"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".Villes">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="102dp"
            android:layout_height="74dp"
            android:src="@drawable/cityactivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription,MissingConstraints,ImageContrastCheck"
            tools:layout_editor_absoluteY="0dp" />


        <ImageView
            android:id="@+id/paris"
            android:layout_width="wrap_content"
            android:layout_height="166dp"
            android:src="@drawable/paris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:ignore="ContentDescription,MissingConstraints" />

        <ImageView
            android:id="@+id/lisbonne"
            android:layout_width="wrap_content"
            android:layout_height="163dp"
            android:src="@drawable/lisbonne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paris"
            tools:ignore="ContentDescription,MissingConstraints" />

        <ImageView
            android:id="@+id/bruxelle"
            android:layout_width="wrap_content"
            android:layout_height="162dp"
            android:src="@drawable/bruxelle"
            app:layout_constraintTop_toBottomOf="@+id/lisbonne"
            tools:ignore="ContentDescription,MissingConstraints"
            tools:layout_editor_absoluteX="-1dp" />

        <ImageView
            android:id="@+id/barcelonne"
            android:layout_width="wrap_content"
            android:layout_height="163dp"
            android:src="@drawable/barcelone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bruxelle"
            tools:ignore="ContentDescription,MissingConstraints" />

        <ImageView
            android:id="@+id/amsterdam"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/amsterdam"
            app:layout_constraintTop_toBottomOf="@+id/barcelonne"
            tools:ignore="ContentDescription,MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


