<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NoirTransparent"
    tools:context=".LesActivity">

    <LinearLayout
        android:id="@+id/texte"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texte1"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:fontFamily="@font/cinzel"
            android:text="Que recherchez "
            android:textColor="@color/vert1"
            android:textSize="40sp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            tools:ignore="HardcodedText,TextContrastCheck,TextSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/cinzel"
            android:text="vous Ã  (ville)?"
            android:textColor="@color/vert1"
            android:textSize="40sp"
            tools:ignore="HardcodedText,TextContrastCheck" />





    </LinearLayout>


    <ImageView
        android:id="@+id/culture"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/culture"
        app:layout_constraintTop_toBottomOf="@+id/texte"
        tools:ignore="ContentDescription,MissingConstraints,ImageContrastCheck"
        tools:layout_editor_absoluteY="180dp" />

    <ImageView
        android:id="@+id/restauration"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/restauration"
        app:layout_constraintTop_toBottomOf="@+id/culture"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/loisirs"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/loisirs"
        app:layout_constraintTop_toBottomOf="@+id/restauration"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription,HardcodedText,MissingConstraints,SpUsage,TextContrastCheck,VisualLintBounds"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            <ImageView
                android:id="@+id/retour_arriere"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/retour_arriere"
                tools:ignore="ContentDescription,HardcodedText,MissingConstraints,SpUsage,TextContrastCheck,VisualLintBounds" />

            <ImageView
                android:id="@+id/accueil"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="85dp"
                android:layout_marginLeft="85dp"
                android:src="@drawable/pageaccueil"
                tools:ignore="ContentDescription,HardcodedText,MissingConstraints,SpUsage,TextContrastCheck,VisualLintBounds" />

            <ImageView
                android:id="@+id/favoris"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="75dp"
                android:layout_marginLeft="75dp"
                android:src="@drawable/favoris"
                tools:ignore="ContentDescription,HardcodedText,MissingConstraints,SpUsage,TextContrastCheck,VisualLintBounds" />
            />


        </LinearLayout>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>