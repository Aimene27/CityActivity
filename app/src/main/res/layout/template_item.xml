<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_activity"
        android:layout_width="145dp"
        android:layout_height="108dp"
        android:src="@drawable/amsterdam" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nom_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nom_default_activity"/>

        <TextView
            android:id="@+id/desc_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION"
            android:layout_below="@id/nom_activity"/>

        <TextView
            android:id="@+id/prix_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRIX"
            android:layout_alignEnd="@id/desc_activity"
            android:layout_toRightOf="@id/desc_activity"/>

    </RelativeLayout>


</LinearLayout>