<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_activity"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:src="@drawable/amsterdam" />

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nom_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nom_default_activity" />

        <TextView
            android:id="@+id/desc_activity"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nom_activity"
            android:text="DESCRIPTION" />

        <TextView
            android:id="@+id/prix_activity"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nom_activity"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@id/desc_activity"
            android:text="PRIX" />

    </RelativeLayout>


</LinearLayout>